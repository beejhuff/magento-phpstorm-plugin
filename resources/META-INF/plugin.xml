<idea-plugin>
    <id>io.github.voleye.intellij.magento2plugin</id>
    <name>Magento PhpStorm</name>
    <version>2.2.2</version>
    <vendor email="vklymenko@outlook.com" url="http://github.com/voleye">Volodymyr Klymenko</vendor>

    <description><![CDATA[
        Magento PhpStorm Plugin supports Magento2<br>
    ]]></description>

    <change-notes><![CDATA[


    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="171.4"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <renamePsiElementProcessor implementation="io.github.voleye.intellij.magento2plugin.MyRenameProcessor" />
        <dom.fileDescription implementation="io.github.voleye.intellij.magento2plugin.DomDescription" />
    </extensions>

</idea-plugin>
